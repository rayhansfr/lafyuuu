<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".HomePage"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_margin="24dp"
        android:orientation="horizontal"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="263dp"
            android:layout_height="match_parent"
            app:boxStrokeColor="@color/grey"
            app:boxStrokeWidth="2dp"
            app:startIconDrawable="@drawable/search_icon"
            app:startIconTint="@color/blue">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:hint="Search Product"
                android:textSize="14dp"
                android:paddingStart="52dp"
                android:textColorHint="@color/grey"
                android:textColorLink="@color/blue" />


        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/favorites_icon"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/notification_icon"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="216dp"
            android:src="@drawable/hero_image"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/carousel_icon"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More Category"
                android:textColor="@color/blue"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:measureAllChildren="false"
            android:scrollbars="none"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="12dp"
                    >

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/man_shirt"
                        />

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:textSize="10dp"
                        android:text="Man Shirt"
                        android:textColor="@color/grey"
                        android:textAlignment="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="12dp"
                    >

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/dress"
                        />

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:textSize="10dp"
                        android:text="Dress"
                        android:textColor="@color/grey"
                        android:textAlignment="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="12dp">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/man_work_equipment"
                        />

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:textSize="10dp"
                        android:text="Men Work Equipment"
                        android:textColor="@color/grey"
                        android:textAlignment="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="12dp">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/woman_bag"
                        />

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:textSize="10dp"
                        android:text="Woman Bag"
                        android:textColor="@color/grey"
                        android:textAlignment="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="12dp">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/man_shoes"
                        />

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:textSize="10dp"
                        android:text="Man Shoes"
                        android:textColor="@color/grey"
                        android:textAlignment="center"
                        />

                </LinearLayout>
            </LinearLayout>



        </HorizontalScrollView>
    </LinearLayout>

</LinearLayout>